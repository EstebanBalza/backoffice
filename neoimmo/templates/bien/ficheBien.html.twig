{% extends 'base.html.twig' %}

{% block title %}Hello FicheBienController!{% endblock %}

{% block body %}


  <div class="card mb-3" style="margin:5vw 5vh">
    <img class="card-img-top" id="imagio" src="{{ asset ('asset/images/') ~ bien.urlPhoto}}" alt="Card image cap">
        <h1 class="card-title">{{bien.titre}}</h1>
      <div class="card-text" id="card-text">{{bien.contenu}}</div>
      <br><br><hr>
      <p>Parking : {{bien.parking}} <br> Balcon : {{bien.balcon}} <br> Jardin : {{bien.jardin}} <br> Superficie : {{bien.superficie}} m²<br> Cette appartement est disponnible en {{bien.typeAnnonce}} </p>
      
  </div>

  <!--Section: Contact v.2-->
<section class="mb-4">

  <!--Section heading-->
  <h2 class="h1-responsive font-weight-bold text-center my-4">Contactez Nous !</h2>
  <!--Section description-->
  <p class="text-center w-responsive mx-3 mb-5">Si cet appartement vous interesse, contactez moi au 06:48:09:34:94
    Ou veuillez remplir le formulaire de contact ci dessous, je vous recontacterais dés que possible.</p>

  <div class="row">

      <!--Grid column-->
      <div class="col-md-9 mb-md-0 mb-5">
          <form id="contact-form" name="contact-form" action="mail.php" method="POST">

              <!--Grid row-->
              <div class="row">

                  <!--Grid column-->
                  <div class="col-md-6 centered">
                      <div class="md-form mb-0 formContactChamps" >
                        <label for="name" class="centered">Nom</label>
                          <input type="text" id="name" name="name" class="form-control">
                          
                      </div>
                  </div>
                  <!--Grid column-->

                  <!--Grid column-->
                  <div class="col-md-6 centered">
                      <div class="md-form mb-0 formContactChamps">
                        <label for="email" class="centered">E-mail</label>
                          <input type="text" id="email" name="email" class="form-control">
                          
                      </div>
                  </div>
                  <!--Grid column-->

              </div>
              <!--Grid row-->

              <!--Grid row-->
              <!--Grid row-->

              <!--Grid row-->
              <div class="row">

                  <!--Grid column-->
                  <div class="col-md-12">

                      <div class="md-form">
                          <textarea type="text" id="message" name="message" rows="10" class="form-control md-textarea" placeholder="Veuillez inscrire l'identifiant du bien suivant lors de l'envoi du formulaire ID n° : {{bien.id}}" ></textarea>
                          
                      </div>

                  </div>
              </div>
              <!--Grid row-->

          </form>

          <div class="text-center text-md-left">
              <a class="btn btn-primary" onclick="document.getElementById('contact-form').submit();">Envoyer</a>
          </div>
          <div class="status"></div>
      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-3 text-center">
          <ul class="list-unstyled mb-0">
              <li><i class="fas fa-map-marker-alt fa-2x"></i>
                  <p>Toulouse purpan - Neo Immo</p>
              </li>

              <li><i class="fas fa-phone mt-4 fa-2x"></i>
                  <p>+6 48 09 34 94</p>
              </li>

              <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                  <p>neoimmo@toulouse.com</p>
              </li>
          </ul>
      </div>
      <!--Grid column-->

  </div>

</section>
<!--Section: Contact v.2-->

{% endblock %}
